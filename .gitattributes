# .gitattributes
# Always use LF line endings in source files

# JavaScript / TypeScript / JSON
*.js     text eol=lf
*.ts     text eol=lf
*.json   text eol=lf

# HTML / CSS
*.html   text eol=lf
*.css    text eol=lf

# YAML / Docker / Configs
*.yml    text eol=lf
*.yaml   text eol=lf
*.Dockerfile text eol=lf
docker-compose.* text eol=lf

# Markdown / Text
*.md     text eol=lf
*.txt    text eol=lf

# Shell / Bash scripts
*.sh     text eol=lf

# Ignore binary files
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.pdf    binary

# Node modules should not be in the repo anyway
node_modules/** filter=exclude
